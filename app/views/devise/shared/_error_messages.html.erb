<% if resource.errors.any? %>
  <script>
      <% resource.errors.full_messages.each do |message| %>
        new Noty({
          type: 'error',
          layout: 'topRight',
          timeout: '2000',
          theme: 'sunset',
          text: '<%= message %>'
        }).show();
      <% end %>
  </script>
<% end %>
